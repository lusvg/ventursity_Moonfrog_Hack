<views:MvxWindowsPage
    x:Class="GeeksGames.win.Views.FirstView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Cirrious.MvvmCross.WindowsCommon.Views"
    mc:Ignorable="d">


    <Grid Background="#22B14C">
        <Image Source="../Assets/Images/home-bg.png" VerticalAlignment="Bottom"></Image>
        <Grid VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="15,15,15,15">
                <TextBlock Text="Born2Win : 3 in 1 Games" FontSize="36" FontWeight="Bold" Foreground="Black"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical" Height="120" HorizontalAlignment="Right" Margin="15,15,15,15" Grid.Column="1">
                <TextBlock Text="Moonfrog Labs" FontSize="36" FontWeight="Bold" Foreground="Black"></TextBlock>
                <TextBlock Text="Geeks &amp; Games" FontSize="28" FontWeight="Bold" Foreground="Black" Margin="25,10,0,0"></TextBlock>
            </StackPanel>
        </Grid>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>


            <Grid x:ConnectionId='1' Background="Brown" Width="200" Height="100" Grid.Column="0" Grid.Row="0" Margin="15,15,15,15"                            >
                <Image Source="../Assets/Images/Seq.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Sequence &amp; Series" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>


            <Grid x:ConnectionId='2' Background="Gold" Width="200" Height="100" Grid.Column="1" Grid.Row="0" Margin="15,15,15,15"                    >
                <Image Source="../Assets/Images/tictac.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Tic Tac Toe" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>

            <Grid x:ConnectionId='3' Background="Purple" Width="200" Height="100" Grid.Column="2" Grid.Row="0" Margin="15,15,15,15"                        >
                <Image Source="../Assets/Images/Cards.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Prediction" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" ></TextBlock>
                </StackPanel>
            </Grid>

            <Grid Background="Blue" Width="200" Height="100" Grid.Column="0" Grid.Row="1" Margin="15,15,15,15">
                <Image Source="../Assets/Images/MobileHome.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Future Home" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>

            <Grid Background="Red" Width="200" Height="100" Grid.Column="1" Grid.Row="1" Margin="15,15,15,15">
                <Image Source="../Assets/Images/MobileHome.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Future Home" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>

            <Grid Background="DarkGreen" Width="200" Height="100" Grid.Column="2" Grid.Row="1"  Margin="15,15,15,15">
                <Image Source="../Assets/Images/MobileHome.png" Width="40" Height="40"></Image>
                <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <TextBlock  Text="Future Home" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"></TextBlock>
                </StackPanel>
            </Grid>



        </Grid>


    </Grid>
</views:MvxWindowsPage>

